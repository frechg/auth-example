<h1 class="page-title">Join the Authenticated</h1>

<section class="form-wrapper">
  <%= form_with model: @user, method: :post do |form| %>
    <div class="form-field-wrapper">
      <%= form.label :email, "Enter your email" %>
      <%= form.text_field :email %>
    </div>
    <div class="form-field-wrapper">
      <%= form.label :password, "Set a password" %>
      <%= form.password_field :password %>
    </div>
    <div class="form-field-wrapper">
      <%= form.label :password_confirmation, "Confirm password" %>
      <%= form.password_field :password_confirmation %>
    </div>
    <div class="form-field-wrapper form-submit-wrapper">
      <%= form.submit "Join" %>
    </div>
  <% end %>
</section>
